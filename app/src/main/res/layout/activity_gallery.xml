<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".galleryActivity"
    android:orientation="vertical">


<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/ci_circular_image_view_id"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:src="@drawable/mavatar"
    />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_choose_image_id"
        android:text="choose image"
        android:layout_below="@id/ci_circular_image_view_id"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:paddingHorizontal="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_name_id"
        android:hint="Enter Name"
        android:layout_below="@id/bt_choose_image_id"
        android:layout_marginTop="25dp"
        android:paddingRight="180dp"
        android:layout_marginStart="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_phone_number_id"
        android:hint="Enter Phone Number"
        android:layout_below="@id/et_enter_name_id"
        android:layout_marginTop="25dp"
        android:paddingRight="120dp"
        android:layout_marginStart="25dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_email_address_id"
        android:hint="Enter Email Address"
        android:layout_below="@id/et_enter_phone_number_id"
        android:layout_marginTop="25dp"
        android:paddingRight="120dp"
        android:layout_marginStart="25dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_submitt_id"
        android:text="submit"
        android:layout_below="@id/et_enter_email_address_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:paddingHorizontal="20dp"/>



</RelativeLayout>